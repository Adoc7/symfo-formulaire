{% extends "JGPlatformBundle::layout.html.twig" %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
{% block jgplatform_body %}
    <h2>Liste des annonces</h2>
    <ul>
        {% for advert in listAdverts %}
        <li>
            <a href="{{ path('jg_platform_view', {'id': advert.id}) }}">
                {{ advert.title }}
            </a>
            par {{ advert.author }},
            le {{ advert.date|date('d/m/Y') }}
        </li>
        {% else %}
        <li>Pas (encore !) d'annonces</li>
        {% endfor %}
    </ul>

    {#Notre plateforme est un peu vide pour le moment, mais cela viendra !#}
{% endblock %}

