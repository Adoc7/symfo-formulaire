{% extends "JGPlatformBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block jgplatform_body %}

    <h2>Liste des annonces</h2>

    <ul>
        {% for formulaire in listFormulaires %}
            <li>
                <a href="{{ path('jg_platform_view', {'id': formulaire.id}) }}">
                    {{ formulaire.title }}
                </a>
                par {{ formulaire.author }},
                le {{ formulaire.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
        {% endfor %}
    </ul>

    <ul class="pagination">
        {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('jg_platform_home', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}

