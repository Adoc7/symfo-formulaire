{% extends "JGPlatformBundle::layout.html.twig" %}


{% block title %}
    Lecture d'une annonce - {{ parent() }}
{% endblock %}


{% block jgplatform_body %}


    {% if not formulaire.categories.empty %}
<p>
    Cette annonce est parue dans les catégories suivantes :
    {% for category in formulaire.categories %}
    {{ category.name }}{% if not loop.last %}, {% endif %}
    {% endfor %}
</p>
    {% endif %}




    {# On vérifie qu'une image soit bien associée à l'annonce #}
    {%  if formulaire.image is not null %}
        <img
                src="{{ formulaire.image.url }}"
                alt="{{ formulaire.image.alt }}"
                height="60"
                />
    {% endif %}

    <h2>
        {{ formulaire.title }}
    </h2>


    <i>Par {{ formulaire.author }}, le {{ formulaire.date|date('d/m/Y') }}</i>

    <div class="well">
        {{ formulaire.content }}
    </div>

    <p>
        <a href="{{ path('jg_platform_home') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>

        <a href="{{ path('jg_platform_edit', {'id': formulaire.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-edit"></i>
            Modifier l'annonce
        </a>

        <a href="{{ path('jg_platform_delete', {'id': formulaire.id}) }}" class="btn btn-danger">
            <i class="glyphicon glyphicon-trash"></i>
            Supprimer l'annonce
        </a>
    </p>



    {% if listFormulaireSkills|length > 0 %}
        <div>
    Cette annonce requiert les compétences suivantes :
    <ul>
        {% for formulaireSkill in listFormulaireSkills %}
        <li>{{ formulaireSkill.skill.name }} : niveau {{ formulaireSkill.level }}</li>
        {% endfor %}
    </ul>
</div>
{% endif %}




{% endblock %}

